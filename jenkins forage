name: Jenkins CI Pipeline

on:
  push:
    branches:
      - main  # or the branch you want to monitor

jobs:
  build_and_test:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up JDK 8
      uses: actions/setup-java@v1
      with:
        java-version: '8'

    - name: Build with Gradle
      run: ./gradlew assemble

    - name: Run Tests
      run: ./gradlew test
